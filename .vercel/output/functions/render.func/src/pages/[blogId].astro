---
import Layout from "../layouts/Layout.astro";
import { getBlogDetail, getBlogs } from "../libs/microcms";

type Path = {
  id: string;
};

// routing
export async function getStaticPaths() {
  const response = await getBlogs({ fields: "id" });
  return response.contents.map((path: Path) => ({
    params: {
      blogId: path.id,
    },
  }));
}

const { blogId } = Astro.params;

if (!blogId) {
  throw Error();
}

const blog = await getBlogDetail(blogId);
---

<Layout title="ASAHI NO NIWA">
  <img src={blog.eyecatch.url} class="rounded-sm w-full h-full object-cover shadow-md aspect-[16/9] sm:aspect-[2/1]" />
  <div class="leading-relaxed tracking-widest" set:html={blog.content} />
</Layout>
