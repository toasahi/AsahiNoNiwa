---
import SiteHeader from "../components/SiteHeader.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="エンジニアのASAHINO-NIWAが日々学んだことをブログに投稿していきます。暇な時にぜひ見てください!!" />
    <meta name="keywords" content="エンジニア,技術,ブログ,ASAHINO-NIWA,NIWA,Blog" />
    <meta name="robots" content="noindex,nofollow" />
    <meta property="og:url" content="https://asahino-niwa.netlify.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="ASAHINO-NIWA" />
    <meta property="og:description" content="エンジニアのASAHINO-NIWAが日々学んだことをブログに投稿していきます。暇な時にぜひ見てください!!" />
    <meta property="og:site_name" content="ASAHINO-NIWA" />
    <title>{title}</title>
  </head>
  <body>
    <SiteHeader />
    <main class="ps-2 pe-2 pt-8 w-full sm:w-11/12 sm:max-w-5xl sm:ms-auto sm:me-auto sm:pe-auto">
      <slot />
    </main>
  </body>
</html>
<style is:global>
  * {
    font-family: "BIZ UDGothic", "ヒラギノ角ゴ ProN W3", "Hiragino Kaku Gothic ProN", sans-serif;
    color: #333333;
  }

  html {
    background-color: #f6f6f6;
    letter-spacing: 0.025em;
  }
  code {
    font-family: "BIZ UDGothic", "ヒラギノ角ゴ ProN W3", "Hiragino Kaku Gothic ProN", sans-serif;
    padding: 0.2em 0.3em;
    margin: 0 0.2em;
    border-radius: 5px;
    background: #f1f2f3;
    color: #404040;
    font-size: 0.9em;
  }

  pre {
    padding: 1em;
    margin: 0 0 1.5em;
    border: solid 1px #eaedf2;
    background: #f3f6fc;
    color: #54687c;
  }
</style>
