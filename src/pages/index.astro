---
import Layout from '../layouts/Layout.astro';
import { getBlogs } from '../libs/microcms';

const response = await getBlogs({fields:["id","title","eyecatch"]})
---

<Layout title="ASAHI NO NIWA">
	<main class="ps-2 pe-2 pt-8">
		<section class="grid grid-cols-postCard gap-x-5 gap-y-3.5 sm:grid-cols-15 sm:gap-12">
			{response.contents.map((blog:any)=>(
				<article class="flex flex-col gap-1 sm:gap-2">
					<figure>
						<a href={blog.id}>
							<img src={blog.eyecatch.url} class="rounded-sm w-full h-full object-cover shadow-md"/>
						</a>
					</figure>
					<a href={blog.id}>
						<h2 class="font-bold text-lg">{blog.title}</h2>
					</a>
				</article>
			))}
		</section>
	</main>
</Layout>